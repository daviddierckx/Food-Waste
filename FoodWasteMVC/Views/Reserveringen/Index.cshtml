<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-4 fw-normal">Mijn Reserveringen</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Pakkets)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://cdn.dribbble.com/users/59947/screenshots/16870381/media/b02407056dbebb961ee73f2e5ec3eddf.jpg?compress=1&resize=400x300" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.BeschrijvendeNaam</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Stad: @item.Stad</li>
                                <li class="list-group-item">Ophalen: @item.TijdOphalen.ToString("dd/MM HH:mm") - @item.TijdTotOphalen.ToString("HH:mm")</li>
                                <li class="list-group-item">Type Maaltijd: @item.TypeMaaltijd</li>
                                <li class="list-group-item">Prijs: €@item.Prijs</li>

                                <li class="list-group-item"></li>

                            </ul>
                        </div>
                    </div>
                </div>

            }
        </div>
