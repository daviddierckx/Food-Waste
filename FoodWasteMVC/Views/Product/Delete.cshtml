@using FoodWaste.Domain
@using FoodWasteMVC.ViewModels
@model Product

<div class="center">
    <form method="post" asp-action="Delete">
        <div class="form-group">
            <label asp-for="BeschrijvendeNaam">Beschrijvende Naam</label>
            <input asp-for="BeschrijvendeNaam" class="form-control" readonly>
            <span asp-validation-for="BeschrijvendeNaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Foto">Foto Url</label>
            <input asp-for="Foto" class="form-control" readonly placeholder="Foto url...">
            <span asp-validation-for="Foto" class="text-danger"></span>

        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" disabled="disabled" asp-for="Alcohol" >
            <label class="form-check-label" asp-for="Alcohol">Alcohol?</label>
            <span asp-validation-for="BeschrijvendeNaam" class="text-danger"></span>

        </div>

    </form>
<div class="form-group" style="padding-left: 50px">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Confirm" class="btn btn-danger btn-lg mt-3" />
    </form>
</div>

</div>
