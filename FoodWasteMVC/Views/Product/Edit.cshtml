@using FoodWasteMVC.ViewModels
@model EditProductViewModel

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="BeschrijvendeNaam">Beschrijvende Naam</label>
        <input asp-for="BeschrijvendeNaam" class="form-control">
        <span asp-validation-for="BeschrijvendeNaam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Foto">Foto Url</label>
        <input asp-for="Foto" class="form-control" placeholder="Foto url...">
        <span asp-validation-for="Foto" class="text-danger"></span>

    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="Alcohol">
        <label class="form-check-label" asp-for="Alcohol">Alcohol?</label>
        <span asp-validation-for="BeschrijvendeNaam" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>